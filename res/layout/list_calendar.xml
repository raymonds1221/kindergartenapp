<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:kgtv="http://schemas.android.com/apk/res/com.antlerslabs.kindergarten"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="10sp">
    <com.antlerslabs.kindergarten.widget.KGTextView
        android:id="@+id/calendar_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:drawableLeft="@drawable/date_marker"
        android:drawablePadding="4dp"
        android:gravity="center_vertical"
        android:text="@string/calendar_day_sample"
        android:textSize="18sp"
        android:textColor="@color/content_color"
        kgtv:font="junior_welter_weight" />
    <com.antlerslabs.kindergarten.widget.KGTextView
        android:id="@+id/calendar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="6"
        android:layout_gravity="center_vertical"
        android:text="@string/calendar_title_sample"
        android:textSize="18sp"
        android:textColor="@color/content_color"
        kgtv:font="junior_welter_weight" />
    <ImageButton 
        android:id="@+id/calendar_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:padding="10dp"
        android:contentDescription="@string/cd_comment"
        android:src="@drawable/comment_icon" 
        android:background="@android:color/transparent" />
    <ImageButton 
        android:id="@+id/calendar_attachment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:padding="10dp"
        android:contentDescription="@string/cd_attachment"
        android:src="@drawable/attachment_icon"
        android:background="@android:color/transparent" />
    <ImageButton
        android:id="@+id/calendar_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:padding="10dp"
        android:contentDescription="@string/cd_share"
        android:src="@drawable/share_btn"
        android:background="@android:color/transparent" />
</LinearLayout>